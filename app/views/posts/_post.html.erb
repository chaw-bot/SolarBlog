<div class="card mt-3">
  <div class="card-body">
    <%= link_to user_post_path(@user.id, post.id), id: "user_post#{post.id}" do %> 
      <h4 class="card-title"><%= post.title %></h4>
      <p class="card-text">
        <%= post.text %>
      </p>
      <p class="card-text d-flex justify-content-end"><small class="text-muted">Comments: <%= post.comments.size %>, Likes: <%= post.likes.size %></small></p>
    <% end %>
  </div>
</div>
