<div class="user-posts">
  <%= render @user %>
  <div class="a-btn">
    <button class="btn btn-primary mt-3">
      <%= link_to 'Add New Post', new_user_post_path(@user.id) %>
    </button>
  </div>
  <% @posts.each do |post| %>
    <%= render post %>
    <%= render partial: "partials/comments", locals: {comments: post.comments } %>
    <% if can? :destroy, post %><%= button_to 'Delete Post', user_post_path(@user, post), method: :delete, class: 'delete btn btn-primary text-end' %><% end %>
  <% end %>

  <div class="a-btn">
    <button type="button" class="btn btn-primary mt-3">Pagination</button>
  </div>
</div>
